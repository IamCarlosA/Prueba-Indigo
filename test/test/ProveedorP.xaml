      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cliente"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProveedorP">

    <Grid HorizontalAlignment="Left" Width="800">
        <DataGrid x:Name="dg" Margin="52,202,41,25" SelectionChanged="dg_SelectionChanged"/>
        <TextBox x:Name="input" HorizontalAlignment="Left" Margin="198,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="20" IsEnabled="False"/>
