        <TextBox x:Name="input4" HorizontalAlignment="Left" Margin="198,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="35,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="132" FontSize="16" TextAlignment="Right" Text="DIRECCION"/>
        <TextBox x:Name="input5" HorizontalAlignment="Left" Margin="198,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="35,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="132" FontSize="16" TextAlignment="Right" Text="TELEFONO"/>
    </Grid>
